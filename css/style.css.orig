body {
  font-family: helvetica;
  display: block;
  margin: 0 auto;
  text-align: center;
  padding: 5px;
  background-color: #fff;
}

header {
  font-family:  Papyrus;
  font-stretch: expanded;
  margin: 15px;
  margin-top: 0px;
  border: 1px solid lightgray;
  padding: 0px;
  background-color: #d02532;
  color: #fff;
  box-shadow: 1px 2px 10px darkgray;
  text-shadow: 1px 0px 5px black;
}
canvas {
  width: 750px;
  border: 1px dotted white;
  margin: 15px;
  background-color: white;
  box-shadow: 0px 1px 5px #49565F;
}

#container {
  display: flex;
}

#container > div {
  flex: 1;
  /*grow*/
}

#d0 {
  margin: 15px;
  border: 0px;
  padding: 5px;
  margin-left: 20%;
  position: relative;
  float: left;
  min-height: 400px;
  display: block;
  width: 75%;
  border-radius: 3px;
  background-color: #fff;
  box-shadow: 0px 0px 5px gray;
}
#other_events{ font-size: 30px; float: left; margin-left: 3px; color: #fff; cursor: pointer; }
#signup{ font-size: 30px; float: right; margin-right: 3px; color: #fff; cursor: pointer; }
#login{ font-size: 30px; float: right; margin-right: 3px; color: #fff; cursor: pointer; }
#other_events:hover{ color:  #d1c4c5 ; }
#left {
  margin: 15px;
  top: 30px;
  margin-right: 0px;
  height: 90%;
  background-color: #fff;
  box-shadow: 0px 1px 5px black;
  position: fixed;
  width: 300px;
  display: none;
  left: 10px;
  z-index: 999;
}
#left:before{
  content: " ";
  position: absolute;
  left: 10px;
  top: -20px;
  width: 0; height: 0;
  border-left: 20px solid transparent;
  border-right: 20px solid transparent;
  border-bottom: 20px solid #fff;
}
.items{
  margin: 30px 30px;
  border: 0px;
  padding: 5px 5px;
  height: 250px;
  display: inline-block;
  width: 250px;
  border-radius: 2px;
  background-color: #fff;
  box-shadow: 0px 1px 5px black;
  transition: .8s;
  position: relative;
  float: left;
}
.events{
  display: inline-block;
  height: 50px;
  border-bottom: 2px solid lightgray;
  padding: 10px 10px;
  width: 90%;
  transition: .8s;
  cursor: pointer;
}
.events:hover{
  background-color:  #d02532;
  color: #fff;
}
.items:hover{  box-shadow: 1px 3px 6px black; transition: scale(2.0,2.0);}

.btn-red{
  margin-top: 3px;
  background-color:  #f8233a ;
  padding: 3px 3px;
  padding-right: 3px;
  padding-bottom: 3px;
  color: #fff;
  border: 0px ; border-radius: 0px;
  box-shadow: 0px 1px 2px black;
  transition: .6s;
  cursor: pointer;
}
.btn-red:hover { background-color: black;  }
/* added by arpanpathak **/
.flat-btn-move{
  margin-top: 3px;
  background-color:  #f8233a ;
  padding-left: 30px; padding-right: 30px;
  padding-top: 10px;
  padding-bottom: 10px;
  color: #fff;
  border: 0px ; border-radius: 0px;
  box-shadow: 0px 1px 5px black;
  transition: .6s;
  cursor: pointer;
}
.later{ background-color: #4f74fb; float: right;}
/* end */
.btn-green{
  margin-top: 3px;
  background-color:  #16a085 ;
  padding: 10px 10px;
  padding-right: 10px;
  padding-bottom: 10px;
  color: #fff;
  border: 0px ; border-radius: 0px;
  box-shadow: 0px 1px 2px black;
  transition: .6s;
  cursor: pointer;
}
.btn-green:hover { background-color: #117a65;  }
.float-bottom{ position:absolute; bottom: 5px; right: 6px; }
input {
  margin-bottom: 5px;
}
footer{
  background-color: black;
  color: white;
  opacity: .7;
}
#bug:hover .fa-bug{
  animation-name: animateIcon;
  animation-duration:2s; 
}
#coding:hover .fa-code{
  animation-name: animateIcon;
  animation-duration:2s; 
}
#biz:hover .fa-bitbucket-square{
  animation-name: animateIcon;
  animation-duration:2s; 
}
